doctype html
html
	head
		title Mailer
		meta(name="viewport" content="initial-scale=1.0")
		link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", rel="stylesheet")
		link(rel="stylesheet", href="stylesheets/style.css")
	body.content
		h1 Contact Form
		form(action="result", method="post")
			div.form-group
				label(for="title", class="col-sm-2 control-label") Title: 
				div.col-sm-10
					input(type="text", class="form-control", id="title", name="title")
			div.form-group
				label(for="firstName", class="col-sm-2 control-label") First Name:
				div.col-sm-10
					input(type="text", class="form-control", id="firstName", name="firstName", required)
			div.form-group
				label(for="lastName", class="col-sm-2 control-label") Last Name:
				div.col-sm-10
					input(type="text", class="form-control", id="lastName", name="lastName", required)
			div.form-group
				label(for="street", class="col-sm-2 control-label") Street:
				div.col-sm-10
					input(type="text", class="form-control", id="street", name="street", required)
			div.form-group
				label(for="city", class="col-sm-2 control-label") City:
				div.col-sm-10
					input(type="text", class="form-control", id="city", name="city", required)
			div.form-group
				label(for="state", class="col-sm-2 control-label") State:
				div.col-sm-10
					input(type="text", class="form-control", id="state", name="state", required)
			div.form-group
				label(for="zip", class="col-sm-2 control-label") Zip:
				div.col-sm-10
					input(type="text", class="form-control", id="zip", name="zip")
			div.form-group
				label(for="phone", class="col-sm-2 control-label") Phone:
				div.col-sm-10
					input(type="text", class="form-control", id="phone", name="phone")
			div.form-group
				label(for="email", class="col-sm-2 control-label") Email:
				div.col-sm-10
					input(type="email", class="form-control", id="email", name="email")
			div.form-group 
				label(for="byMail", class="col-sm-2 control-label") By Mail:
				input(type="checkbox", id="byMail", name="byMail")
			div.form-group 
				label(for="byPhone", class="col-sm-2 control-label") By Phone:
				input(type="checkbox", id="byPhone", name="byPhone")
			div.form-group 
				label(for="byEmail", class="col-sm-2 control-label") By Email:
				input(type="checkbox", id="byEmail", name="byEmail")
			div.form-group
				div.col-sm-offset-2.col-sm-10
					button(type="submit", class="btn btn-default") Submit Info
